{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    {% for comment in episode.comments %}
        <tr>
            <td>Commentaire : {{ comment.comment }}</td></br>
            <td>Note :{{ comment.rate }}/10</td></br>
            <td>Auteur : {{ comment.author.email }}</td></br>
            {% if app.user %}
                <a href="{{ path('comment_show', {'id': comment.id}) }}">Voir</a>
                <a href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
            {% endif %}
            </td>
        </tr>
        </br>
    {% endfor %}




